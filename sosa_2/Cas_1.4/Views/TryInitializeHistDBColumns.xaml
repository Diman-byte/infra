<Window x:Class="Cas_1._4.Views.InitializeHistDBColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initialize HistDB Columns" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Historical Database Name:" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="DatabaseNameTextBox" Grid.Row="0" Margin="5"/>

        <Label Content="Node IDs (comma separated):" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="NodeIdsTextBox" Grid.Row="1" Margin="5" Height="100" TextWrapping="Wrap"/>

        <Button Content="Initialize Columns" Grid.Row="2" Click="InitializeHistDBColumns_Click" Margin="5"/>

        <TextBlock x:Name="ResultTextBox" Grid.Row="3" Margin="5" TextWrapping="Wrap" />
    </Grid>
</Window>
